# Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-immediately
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database Settings
POSTGRES_DB=trailium_prod
POSTGRES_USER=trailium_user
POSTGRES_PASSWORD=your-strong-database-password-here

# Frontend Settings
VITE_API_BASE_URL=https://api.yourdomain.com

# Security Settings
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Redis Settings (for caching)
REDIS_URL=redis://redis:6379

# Email Settings
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_ENABLED=True

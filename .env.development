# Development Environment Variables Template
# Copy this file to .env.development and fill in your actual values

# Django Settings
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=django-insecure-dev-key-for-development-only
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://trailium_user:trailium_pass@localhost:5432/trailium_dev

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Email Settings (use console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Security (relaxed for development)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/django.log

# Monitoring
PROMETHEUS_ENABLED=False
